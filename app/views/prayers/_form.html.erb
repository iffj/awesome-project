<div style="margin-left:64px; margin-right:64px">
<%= form_for @prayer, :html => {:class => "form-horizontal"} do |f|%>
    <div class="form-group">
        <label for="korean_prayer_input" class="col-sm-2 control-label">Prayer Name(Kor)</label>
        <div class="col-sm-10">
            <%= f.text_field :prayer, class:"form-control", placeholder:"이름", id:"korean_prayer_input" %>
        </div>
    </div>
    <div class="form-group">
        <label for="english_prayer_input" class="col-sm-2 control-label">Prayer Name(Eng)</label>
        <div class="col-sm-10">
            <%= f.text_field :english_prayer, class:"form-control", placeholder:"english prayer name", id:"english_prayer_input" %>
        </div>
    </div>
    <div class="form-group">
        <label for="name_input" class="col-sm-2 control-label">Name(Kor)</label>
        <div class="col-sm-10">
            <%= f.text_field :name, class:"form-control", placeholder:"대상자", id:"name_input" %>
        </div>
    </div>
    <div class="form-group">
        <label for="english_name_input" class="col-sm-2 control-label">Name(Kor)</label>
        <div class="col-sm-10">
            <%= f.text_field :english_name, class:"form-control", placeholder:"english name", id:"english_name_input" %>
        </div>
    </div>
    <div class="form-group">
        <label for="relationship_input" class="col-sm-2 control-label">Relationship</label>
        <div class="col-sm-10">
            <%= f.text_field :relationship, class:"form-control", placeholder:"관계", id:"relationship_input" %>
        </div>
    </div>
    <div class="form-group">
        <label for="english_relationship_input" class="col-sm-2 control-label">Relationship</label>
        <div class="col-sm-10">
            <%= f.text_field :english_relationship, class:"form-control", placeholder:"relationship", id:"english_relationship_input" %>
        </div>
    </div>
    <div class="form-group">
        <label for="note_input" class="col-sm-2 control-label">비고</label>
        <div class="col-sm-10">
            <%= f.text_field :note, class:"form-control", placeholder:"비고", id:"note_input" %>
        </div>
    </div>
    <div class="form-group">
        <label for="english_note_input" class="col-sm-2 control-label">Note</label>
        <div class="col-sm-10">
            <%= f.text_field :english_note, class:"form-control", placeholder:"note", id:"english_note_input" %>
        </div>
    </div>
    <div style="display:flex; flex-direction:row-reverse">
        <%= f.submit :class=>'btn btn-success' %>
    </div>
<% end %>

<%= link_to "back", prayers_path, {:style=>'display:flex; flex-direction:row-reverse;'} %>
</div>